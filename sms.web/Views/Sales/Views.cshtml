<body class="hold-transition sidebar-mini">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">View Sales</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form id="salesForm" onsubmit="return false;">
                <div class="row">
                    <div class="col-sm-6">
                        <!-- select -->
                        <div class="form-group">
                            <label>Customer</label>
                            <select id="CustomerDropDown" class="form-control select2" style="width: 100%;" disabled>
                                <option selected="selected">Select</option>

                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Invoice Number</label>
                            <input id="invoiceNumber" type="text" class="form-control" placeholder="Enter ... " disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Invoice Date</label>
                            <div class="input-group date" data-target-input="nearest">
                                <input id="InvoiceDate" type="text" class="form-control datetimepicker-input" data-target="#reservationdatetime" disabled />
                                <div class="input-group-append" data-target="#reservationdatetime" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Shipment Details</label>
                            <input id="ShipmentDetails" type="text" class="form-control" placeholder="Enter ..." disabled>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <label>Customer Type</label>
                        <select id="CustomerTypeDropDown" class="form-control select2" style="width: 100%;" disabled>
                            <option selected="selected">Select</option>

                        </select>
                    </div>

                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Expected Delivery Date</label>
                            <input id="ExpextedDate" type="text" class="form-control" placeholder="Enter ..." disabled>
                        </div>
                    </div>

                </div>
                <hr />
                <div class="card">
                    <div class="card-header">
                        <table id="salesItemsTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th style="display:none">Id</th>
                                    <th>Item Name</th>
                                    <th>Item Number</th>
                                    <th>Barcode</th>

                                    <th>Quantity</th>
                                    <th>Rate</th>
                                    <th>Tax Type</th>

                                    <th>GST %</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody disabled>
                                <tr >
                                    <td style="display:none"><input type="text" class="form-control " name="item-id-"></td>
                                    <td>
                                        <select id="ItemName" class="form-control select2 item-name" style="width: 100%;" disabled>
                                            <option value="" selected="selected">Select</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select id="ItemNumber" class="form-control select2 item-number" style="width: 100%;" disabled>
                                            <option value="" selected="selected">Select</option>
                                        </select>
                                    </td>
                                    <td><input id="barcode" type="number" class="form-control " name="barcode[]" disabled></td>
                                    <td><input id="quantity" type="number" class="form-control" name="quantity[]" disabled></td>
                                    <td><input id="mrp" type="number" class="form-control" name="mrp[]"></td>
                                    <!-- Add an id to the tax type element -->
                                    <td>
                                        <select id="taxTypeColumn" class="form-control select2 taxtype-name" style="width: 100%;" disabled><option value="" selected="selected">Select</option></select>
                                    </td>


                                    <td><input id="discountpercentage" type="number" class="form-control" name="discount_percentage[]" disabled></td>
                                    <td><input id="totalprice" type="number" class="form-control" name="total_price[]" onkeydown="addRowOnEnter(event)" disabled></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-sm-6"></div> <!-- Empty column to create space -->
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label> Total Tax</label>
                                        <input id="TotalDiscount" type="text" class="form-control" placeholder="Enter ..." oninput="updateTotalDiscount()" disabled>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Total Discount Price</label>
                                        <input id="TotalTax" type="text" class="form-control" placeholder="Enter ..." oninput="updatePayableAmount()" disabled>
                                    </div>
                                </div>
                               

                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Payable Amount</label>
                                        <input type="text" class="form-control" id="totalSum" placeholder="Total Amount" readonly>
                                    </div>
                                </div>


                                <div class="col-6">
                                    <label>Total Paid</label>

                                    <input type="text" class="form-control" id="totalPaid" placeholder="Total Paid" readonly onclick="openPaymentModal()" disabled>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                @* <button type="submit" class="btn btn-success" id="printButton">Print</button> *@
                <button type="button" class="btn btn-success small-button" data-toggle="modal" data-target="#modal-xl" onclick="populateInvoicePrintModal()">
                    Print
                </button>
                <button type="submit" class="btn btn-primary" id="saveButton" disabled>Save</button>
                <button type="submit" class="btn btn-primary" id="submitBtn" disabled>Submit</button>
                <button type="button" class="btn btn-danger" id="cancelButton" onclick="cancelButtonClick()">Cancel</button>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- Modal -->
    <div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #17a2b8; color: white;">
                    <h5 class="modal-title" id="itemModalLabel">Add Payment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" disabled>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Cheque</label>
                                    <input id="Check" type="text" class="form-control" name="check" placeholder="Enter ..." disabled>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Cash</label>
                                    <input id="Cash" type="text" class="form-control" name="cash" placeholder="Enter ..." disabled>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Cards</label>
                                    <input id="Cards" type="text" class="form-control" name="cards" placeholder="Enter ..." disabled>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>UPI/Online</label>
                                    <input id="UPIOnline" type="text" class="form-control" name="upi" placeholder="Enter ..." oninput="updateTotalPayment()" disabled>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="paymentModalSubmitBtn" disabled>Submit</button>


                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice Print Modal -->

    <div class="modal fade" id="modal-xl">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Print Invoice</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <header style="background-color:white; border:1px">
                         <div>
                            <img src="~/dist/img/sms_logo.png" alt="Company Logo" class="logo-image" style="text-align:left" />
                        </div>
                        <div class="invoice-details" style="text-align:center">
                            <label><b>Invoice Copy</b></label>
                        </div>
                        <div class="invoice-details">
                            <table style="width:100%">
                                <tr>
                                    <td id="modalInvoiceNumber">
                                    </td>
                                    
                                    <td id="modalInvoiceDate" style="text-align:right">
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </header>

                    <section>
                        <table style="background-color:white;width:100%">
                            <tr>
                                <td style="width: 50%; border: 1px solid #ddd; padding: 8px;"><b>To:</b> <br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Shashank S Patel<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;6th Main, 7th cross<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Banashankari 3rd stage<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Bangalore-560085</td>
                                <td style="width: 50%; border: 1px solid #ddd; padding: 8px;"><b>From:</b><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Nichi-In Software Solutions Pvt.Ltd<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;813, Outer Ring Rd<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Banashankari 3rd stage<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Bangalore-560085</td>
                            </tr>

                            <!-- Add more rows as needed -->
                        </table><br />
                    </section>
                    <section>
                        <table style="width:100%">
                            <tr>
                                <td style="width: 50%; border: 1px solid #ddd; padding: 8px;"><b>Customer</b></td>
                                <td id="modalCustomer" style="width: 50%; border: 1px solid #ddd; padding: 8px;"></td>
                            </tr>

                            <tr>
                                <td style="width: 50%; border: 1px solid #ddd; padding: 8px;"><b>Expected Delivery Date</b></td>
                                <td id="modalExpectedDelivery" style="width: 50%; border: 1px solid #ddd; padding: 8px;"></td>
                            </tr>


                            <!-- Add more rows as needed -->
                        </table><br />
                    </section>
                    <section>
                        <table id="modalItemsTable" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Item Name</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Item Number</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Barcode</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Quantity</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Rate</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Tax Type</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">GST %</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Dynamic rows will be added here -->
                            </tbody>
                        </table>
                    </section><br />

                    <section>
                        <table style="width:50%; float:right">
                            <tr>
                                <th style="width: 70%; border: 1px solid #ddd; padding: 8px;">Total Tax</th>
                                <td id="modalTotalTax" style="width: 30%; border: 1px solid #ddd; padding: 8px;"></td>
                            </tr>
                            <tr>
                                <th style="width: 70%; border: 1px solid #ddd; padding: 8px;">Total Discount</th>
                                <td id="modalTotalDiscount" style="width: 30%; border: 1px solid #ddd; padding: 8px;">100</td>
                            </tr>
                            <tr>
                                <th style="width: 70%; border: 1px solid #ddd; padding: 8px;">Total Payable</th>
                                <td id="modalTotalPayable" style="width: 30%; border: 1px solid #ddd; padding: 8px;">1000</td>
                            </tr>
                            <tr>
                                <th style="width: 70%; border: 1px solid #ddd; padding: 8px;">Total Paid</th>
                                <td id="modalTotalPaid" style="width: 30%; border: 1px solid #ddd; padding: 8px;"></td>
                            </tr>
                        </table>
                    </section>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->


