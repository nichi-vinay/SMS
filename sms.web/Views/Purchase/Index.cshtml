                            <input type="text" id="fromDate" class="form-control" style="width: 100%;" placeholder="Select a date">
                        </div>
                    </div>
                    <div class="col-lg-2 ">
                        <div class="form-group">
                            <label for="toDate" style="margin-left: 50px;">To Date</label>
                            <input type="text" id="toDate" class="form-control" style="width: 100%;" placeholder="Select a date">
                        </div>
                    </div>
                    <div class="col-lg-5 text-right">
                        <a href="@Url.Action("AddPurchase", "Purchase")" class="btn btn-info">
                            <i class="fas fa-plus"></i> Add Purchase
                        </a>
                    </div>
                </div>
             
            
        </div>




    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">

