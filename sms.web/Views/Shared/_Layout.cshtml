    <script>
        $(document).ready(function () {
            // Get the current URL of the page
            var currentUrl = window.location.pathname;

            // Handle click events on menu items
            $('.nav-item a').not('.no-highlight').on('click', function () {
                // Remove the 'active' class from all menu items
                $('.nav-item').removeClass('active');

                // Add the 'active' class to the clicked menu item's parent
                $(this).parent('.nav-item').addClass('active');
            });

            // Highlight the menu item corresponding to the current page
            $('.nav-item a').each(function () {
                var menuItemUrl = $(this).attr('href');

                // Check if the current URL matches the menu item's URL
                if (currentUrl === menuItemUrl) {
                    // Add a class to highlight the menu item
                    $(this).parent('.nav-item').addClass('active');
                }
            });
        });

      
